{
    "name": "o11y-sample",
    "description": "Sample LWC application to demonstrate the 'o11y' instrumentation platform",
    "version": "0.1.0",
    "author": "instrumentationteam@salesforce.com",
    "bugs": "https://git.soma.salesforce.com/instrumentation/o11y-sample-app/issues",
    "dependencies": {
        "@lwc/synthetic-shadow": "^1.9.7",
        "@salesforce-ux/design-system": "^2.14.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "lwc-components-lightning": "^1.11.1-alpha",
        "o11y": "0.0.49"
    },
    "engines": {
        "node": ">=13.12.0",
        "npm": ">=7.4.3",
        "yarn": ">=1.22.4"
    },
    "homepage": "https://git.soma.salesforce.com/instrumentation/o11y-sample-app",
    "keywords": [
        "distributed tracing",
        "instrumentation",
        "o11y",
        "observability",
        "olly",
        "telemetry",
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "instrumentation/o11y-sample",
    "scripts": {
        "build:production": "lwc-services build -m production",
        "build": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "play": "run-p watch:client serve:api",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "run-p serve:client serve:api",
        "serve:api": "node src/server/api.js",
        "serve:client": "node scripts/FrontendServer.js",
        "watch:client": "lwc-services watch"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "husky": "^4.3.6",
        "lint-staged": "^10.5.3",
        "lwc-services": "^2.3.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1"
    }
}